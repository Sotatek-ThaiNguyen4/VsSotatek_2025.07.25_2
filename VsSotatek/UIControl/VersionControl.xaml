<UserControl x:Class="VsSotatek.UIControl.VersionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VsSotatek.UIControl"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="200">
    <Border BorderBrush="White" Background="DimGray" Margin="2">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="{Binding Version}" Grid.Column="1"  Width="190" Height="35" FontSize="25" FontWeight="Bold" Background="DimGray" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" Foreground="Yellow" Margin="2"/>
            <Separator  Grid.Row="0" VerticalAlignment="Bottom" Margin="10,0,10,0" Background="#272B37"/>
            <Label Content="{Binding DateMake}" Grid.Column="1"  Width="190" Height="25" FontSize="10" FontWeight="Bold" Background="DimGray" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Center" Foreground="Yellow" Margin="2"/>
        </StackPanel>
    </Border>
</UserControl>
